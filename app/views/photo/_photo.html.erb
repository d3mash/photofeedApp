<li class="photo">
    <div class="media postheader">
        <% user = User.find(photo.user.id) %>
        <div class="media-left media-middle">
            <%= gravatar_for(user)%>
        </div>
        <div class="media-body">
            <h3 class="media-heading"><%= user.name %> posted this</h3>
            <h3 class="media-heading">at <%= photo.created_at.strftime("%Y/%m/%d %H:%M") %></h3>
        </div>
        <a href="/photo/<%= photo.id %>"><img class="photo-image" src="<%= photo.link %>"></a>
        <p class="photo-caption"><%= photo.caption %></p>
        <hr>
        <% if logged_in? && current_user.id.equal?(photo.user_id) %>
        <%= link_to "delete", photo, method: :delete,
                                              data: { confirm: "Delete this? You sure?" } %>
        <% end %>
    </div>
</li>