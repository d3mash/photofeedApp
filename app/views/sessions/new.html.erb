<body class="container">
  <% provide(:title, "Log in") %>
  <h1 style="text-align: center">Log in</h1>
  <div class="row">
    <form class="col-md-6 col-md-offset-3" method="POST" action="/login" enctype="multipart/form-data">
      <%= token_tag %>
      <label for="session[email]">E-mail</label>
      <input type="email" name="session[email]" class="form-control">
      <label for="session[password]">Password</label>
      <input type="password" name="session[password]" class="form-control">
      <input id ="remember_me" class="btn btn-primary" type="submit" value="Log me in!">
      <label class="checkbox-inline"><input type="checkbox" name="session[remember_me]" value="1"> Remember me on this computer</label>
      <p class="lead" style="text-align: center">New user? <%= link_to "Sign up now!", '/users/new' %></p>
    </form>
  <div>
</body>